{
  "id": "SystemairIAM",
  "name": {
    "en": "Systemair IAM Cloud"
  },
  "icon": "{{driverAssetsPath}}/icon.svg",
  "images": {
    "large": "{{driverAssetsPath}}/images/large.png",
    "small": "{{driverAssetsPath}}/images/small.png"
  },
  "class": "thermostat",
  "connectivity": ["cloud"],
  "capabilities": [
    "target_temperature",
    "measure_temperature",
    "systemair_mode_iam",
    "systemair_fan_mode_iam",
    "systemair_mode_iam_ro",
    "systemair_fan_mode_iam_ro",
    "filter_time_left",
    "eaf_reg_speed",
    "eaf_rpm",
    "saf_reg_speed",
    "saf_rpm",
    "measure_temperature.outdoor_air_temp",
    "measure_temperature.supply_air_temp",
    "measure_temperature.extract_air_temp",
    "measure_temperature.overheat_temp",
    "measure_humidity",
    "eco_mode"
  ],
  "capabilitiesOptions": {
    "target_temperature": {
      "min": 12,
      "max": 30,
      "step": 0.5
    },
    "measure_temperature.outdoor_air_temp": {
      "title": "Outdoor air temperature"
    },
    "measure_temperature.supply_air_temp": {
      "title": "Supply air temperature"
    },
    "measure_temperature.extract_air_temp": {
      "title": "Extract air temperature"
    },
    "measure_temperature.overheat_temp": {
      "title": "Overheat temperature"
    }
  },
  "pair": [
    {
      "id": "pair_start",
      "template": "login_credentials",
      "options": {
        "logo": "pair_logo.png",
        "usernameLabel": {
          "en": "Systemair account"
        },
        "usernamePlaceholder": {
          "en": "Email..."
        },
        "passwordLabel": {
          "en": "Password"
        },
        "passwordPlaceholder": {
          "en": "Password..."
        }
      }
    },
    {
      "id": "list_devices",
      "template": "list_devices",
      "navigation": { "next": "add_devices" }
    },
    {
      "id": "add_devices",
      "template": "add_devices"
    }
  ],
  "repair": [
    {
      "id": "repair_start",
      "template": "login_credentials",
      "options": {
        "logo": "../pair/pair_logo.png",
        "usernameLabel": {
          "en": "Systemair account"
        },
        "usernamePlaceholder": {
          "en": "Email..."
        },
        "passwordLabel": {
          "en": "Password"
        },
        "passwordPlaceholder": {
          "en": "Password..."
        }
      }
    },
    {
      "id": "repair_loading",
      "template": "loading"
    }
  ]
}
