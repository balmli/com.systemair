{
  "id": "com.systemair",
  "version": "0.9.1",
  "compatibility": ">=2.0.0",
  "sdk": 2,
  "brandColor": "#004B88",
  "name": {
    "en": "Systemair"
  },
  "description": {
    "en": "Smart and healthy air in your home"
  },
  "category": [
    "climate"
  ],
  "tags": {
    "en": [
      "systemair",
      "temperature control",
      "heating",
      "hvac"
    ]
  },
  "images": {
    "large": "/assets/images/large.png",
    "small": "/assets/images/small.png"
  },
  "permissions": [],
  "author": {
    "name": "Bjørnar Almli",
    "email": "bjornar.almli@gmail.com"
  },
  "contributors": {
    "developers": [
      {
        "name": "Bjørnar Almli",
        "email": "bjornar.almli@gmail.com"
      }
    ]
  },
  "contributing": {
    "donate": {
      "paypal": {
        "username": "bjornaralmli"
      }
    }
  },
  "bugs": {
    "url": "https://github.com/balmli/com.systemair/issues"
  },
  "source": "https://github.com/balmli/com.systemair",
  "flow": {
    "triggers": [
      {
        "id": "systemair_alarm",
        "title": {
          "en": "Alarm"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=SystemairHVAC"
          }
        ],
        "tokens": [
          {
            "name": "info",
            "title": {
              "en": "Info"
            },
            "example": {
              "en": "Alarm"
            }
          }
        ]
      }
    ],
    "actions": [
      {
        "id": "systemair_boost_on",
        "title": {
          "en": "Initiate boost mode"
        },
        "hint": {
          "en": "The boost mode overrides the selected fan speed to a predefined level for a predefined time period."
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=SystemairHVAC"
          }
        ]
      },
      {
        "id": "systemair_set_fan_mode",
        "title": {
          "en": "Set fan mode"
        },
        "hint": {
          "en": "Change the fan mode."
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=SystemairHVAC"
          },
          {
            "name": "fanmode",
            "type": "dropdown",
            "values": [
              {
                "id": "Auto",
                "label": {
                  "en": "Auto"
                }
              },
              {
                "id": "Low",
                "label": {
                  "en": "Low"
                }
              },
              {
                "id": "Medium",
                "label": {
                  "en": "Medium"
                }
              },
              {
                "id": "High",
                "label": {
                  "en": "High"
                }
              },
              {
                "id": "Off",
                "label": {
                  "en": "Off"
                }
              }
            ]
          }
        ]
      },
      {
        "id": "systemair_set_mode",
        "title": {
          "en": "Set mode"
        },
        "hint": {
          "en": "Change the mode."
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=SystemairHVAC"
          },
          {
            "name": "mode",
            "type": "dropdown",
            "values": [
              {
                "id": "255",
                "label": {
                  "en": "Comfort mode"
                }
              },
              {
                "id": "0",
                "label": {
                  "en": "Energy Saving Mode"
                }
              }
            ]
          }
        ]
      }
    ]
  },
  "drivers": [
    {
      "id": "SystemairHVAC",
      "name": {
        "en": "Systemair HVAC adapter"
      },
      "icon": "/drivers/SystemairHVAC/assets/icon.svg",
      "images": {
        "large": "/drivers/SystemairHVAC/assets/images/large.png",
        "small": "/drivers/SystemairHVAC/assets/images/small.png"
      },
      "class": "thermostat",
      "capabilities": [
        "target_temperature",
        "systemair_mode",
        "systemair_fan_mode",
        "systemair_boost",
        "systemair_alarm",
        "systemair_setpoint"
      ],
      "capabilitiesOptions": {
        "target_temperature": {
          "min": 5,
          "max": 40,
          "step": 0.5
        }
      },
      "zwave": {
        "manufacturerId": 630,
        "productTypeId": 313,
        "productId": 1,
        "includeSecure": false,
        "productDocumentation": "https://products.z-wavealliance.org/ProductManual/File?folder=&filename=MarketCertificationFiles/1768/Z-Wave_to_Systemair_HVAC_Adapter_User_Manual.pdf",
        "pid": 1768,
        "imageRemotePath": "https://products.z-wavealliance.org/ProductManual/File?folder=&filename=product_pictures/ZC10-16065101.jpg",
        "learnmode": {
          "instruction": {
            "en": "Press the button on your device three times"
          }
        },
        "associationGroups": [
          1
        ],
        "associationGroupsOptions": {
          "1": {
            "hint": {
              "en": "“Lifeline” reports the device status and allows\r\nfor assigning single device only (main controller by default)."
            }
          }
        }
      },
      "settings": [
        {
          "id": "System_Type",
          "zwave": {
            "index": 1,
            "size": 2
          },
          "type": "dropdown",
          "value": "0",
          "label": {
            "en": "Ventilation System Type"
          },
          "hint": {
            "en": "Ventilation System Type (read-only)"
          },
          "values": [
            {
              "id": "0",
              "label": {
                "en": "VR400"
              }
            },
            {
              "id": "1",
              "label": {
                "en": "VR700"
              }
            },
            {
